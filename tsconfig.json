{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "composite": true,
    "declaration": true,
    "esModuleInterop": true,
    "incremental": true,
    "jsx": "react",
    "module": "esnext",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "preserveWatchOutput": true,
    "resolveJsonModule": true,
    "outDir": "lib",
    "rootDir": "src",
    "strict": true,
    "strictNullChecks": true,
    "target": "es2017",
    "types": ["jest"]
  },
  "include": [
    "src/*",
    "src/common/*",
    "src/kubernetes/*",
    "src/kubernetes/contents/*",
    "src/kubernetes/contents/access-control/*",
    "src/kubernetes/contents/config/*",
    "src/kubernetes/contents/network/*",
    "src/kubernetes/contents/storage/*",
    "src/kubernetes/contents/workloads/*",
    "src/kubernetes/menu/*"
  ]
}
